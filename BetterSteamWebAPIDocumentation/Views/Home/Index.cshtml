@model IReadOnlyCollection<SteamWebAPI2.Models.SteamInterface>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Better Steam Web API Documentation</title>
    <link rel="canonical" href="@Request.Url.AbsoluteUri" />
    <link rel="shortcut icon" href="~/Content/favicon.ico" type="image/x-icon">
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/bootstrap-theme.min.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container body-content">
        @foreach (var steamWebApiInterface in Model)
        {
            <h2>@steamWebApiInterface.Name</h2>
            foreach (var steamWebApiMethod in steamWebApiInterface.Methods)
            {
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>@steamWebApiMethod.Name</strong>
                        <span class="label label-primary">Version: @steamWebApiMethod.Version</span>
                        <span class="label label-success">HttpMethod: @steamWebApiMethod.HttpMethod</span>
                    </div>
                    @if (steamWebApiMethod.Parameters.Count > 0)
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Required?</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var steamWebApiParameter in steamWebApiMethod.Parameters)
                                {
                                    <tr>
                                        <td>@steamWebApiParameter.Name</td>
                                        <td>@steamWebApiParameter.Type</td>
                                        <td>
                                            @if (steamWebApiParameter.IsOptional)
                                            {
                                                <i class="glyphicon glyphicon-remove text-danger"></i>
                                            }
                                            else
                                            {
                                                <i class="glyphicon glyphicon-ok text-success"></i>
                                            }
                                        </td>
                                            @if (!String.IsNullOrEmpty(steamWebApiParameter.Description))
                                            {
                                                <td>
                                                    @steamWebApiParameter.Description
                                                </td>
                                            }
                                            else
                                            {
                                                <td class="danger">
                                                    This parameter has no listed description.
                                                </td>
                                            }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="panel-body">
                            This method has no listed parameters.
                        </div>
                    }
                </div>
            }
        }
    </div>
    <div class="footer">
        <footer></footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>